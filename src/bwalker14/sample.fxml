<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" minHeight="300.0" minWidth="300.0" prefHeight="300.0" prefWidth="300.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bwalker14.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label fx:id="city_state" alignment="CENTER" contentDisplay="CENTER" text="City, State" textAlignment="CENTER" GridPane.columnIndex="1" />
      <Label fx:id="temperature" text="Temperature" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Label fx:id="weather" text="Weather" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Label text="Zip:" GridPane.rowIndex="3" />
      <TextField fx:id="user_input" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Button mnemonicParsing="false" onAction="#buttonPress" text="Go!" GridPane.columnIndex="2" GridPane.rowIndex="3" />
   </children>
</GridPane>
